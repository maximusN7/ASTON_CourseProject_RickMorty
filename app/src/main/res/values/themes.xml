<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ASTON_CourseProject_RickMorty" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@drawable/drawable_splash</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="checkboxStyle">@style/CheckBoxDialog</item>
        <item name="radioButtonStyle">@style/RadioBoxDialog</item>
        <item name="editTextStyle">@style/EditTextDialog</item>
    </style>

    <style name="CheckBoxDialog" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/black</item>
        <item name="buttonTint">@color/black</item>
    </style>
    <style name="RadioBoxDialog" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/black</item>
        <item name="buttonTint">@color/black</item>
    </style>
    <style name="EditTextDialog" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/black</item>
    </style>
</resources>